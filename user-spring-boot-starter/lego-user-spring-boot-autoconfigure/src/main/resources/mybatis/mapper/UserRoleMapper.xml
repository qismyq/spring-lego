<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.yunqihui.starter.user.mapper.UserRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="net.yunqihui.starter.user.entity.UserRole">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="role_id" property="roleId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, role_id
    </sql>



    <resultMap id="roleCode" type="net.yunqihui.starter.user.entity.UserRole">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="user_id" property="userId" jdbcType="BIGINT" />
        <result column="role_id" property="roleId" jdbcType="VARCHAR" />
        <result column="roleCode" property="roleCode" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getRoleCodeAsString" resultMap="roleCode" >
        SELECT
        userrole.id,userrole.user_id,userrole.role_id,role.code as roleCode
        FROM t_user_role as userrole LEFT JOIN t_role as role ON userrole.role_id = role.id
        WHERE userrole.user_id = #{userId}
    </select>

</mapper>
