<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.2.0.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>


    <groupId>net.yunqihui</groupId>
    <artifactId>lego-user-spring-boot-starter</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>lego-user-spring-boot-starter</name>
    <description>user and permission module</description>

    <properties>
        <java.version>1.8</java.version>

        <frame-starter.version>1.0-SNAPSHOT</frame-starter.version>
        <common-starter.version>1.0-SNAPSHOT</common-starter.version>
        <shiro-starter.version>1.0-SNAPSHOT</shiro-starter.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>net.yunqihui</groupId>
            <artifactId>lego-frame-spring-boot-starter</artifactId>
            <version>${frame-starter.version}</version>
        </dependency>

        <dependency>
            <groupId>net.yunqihui</groupId>
            <artifactId>lego-common-spring-boot-starter</artifactId>
            <version>${common-starter.version}</version>
        </dependency>
        <dependency>
            <groupId>net.yunqihui</groupId>
            <artifactId>lego-shiro-spring-boot-starter</artifactId>
            <version>${shiro-starter.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>net.yunqihui</groupId>
                    <artifactId>lego-user-spring-boot-starter</artifactId>
                </exclusion>
            </exclusions>
        </dependency>


        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
            <version>1.16.20</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>


    <build>
        <!-- 添加资源 -->
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <!-- src/main/resources下的指定资源放行 -->
                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.yml</include>
                    <include>**/*.xml</include>
                    <include>**/*.sql</include>
                    <include>**/spring.factories</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>

        <!--<plugins>-->
            <!--<plugin>-->
                <!--<groupId>org.springframework.boot</groupId>-->
                <!--<artifactId>spring-boot-maven-plugin</artifactId>-->
                <!--<configuration>-->
                    <!--<fork>true</fork>-->
                <!--</configuration>-->
            <!--</plugin>-->
        <!--</plugins>-->
    </build>


</project>